<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_Page">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">


        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/baby_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아기 이름"
                android:textSize="12pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>

            <TextView
                android:id="@+id/baby_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름을 입력해주세요" />


            <Button
                android:id="@+id/save_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delivery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출산 예정일"
                android:textSize="12pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>

            <TextView
                android:id="@+id/delivery_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예정일을 입력해주세요" />


            <Button
                android:id="@+id/save_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/last_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마지막 월경 날짜"
                android:textSize="12pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>

            <TextView
                android:id="@+id/last_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜를 입력해주세요" />


            <Button
                android:id="@+id/save_date_lastday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/health_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보건소"
                android:textSize="12pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>

            <TextView
                android:id="@+id/health_center2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보건소를 선택해주세요" />

            <Button
                android:id="@+id/save_health_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">
            </View>

            <Button
                android:id="@+id/delete_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="내 정보 모두 삭제" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

